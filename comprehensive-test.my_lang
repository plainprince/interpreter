# --- 5. Classes ---
console.log("\n--- Testing Classes ---")
class Greeter
    greeting = "Hello"
    function constructor(name);
        this.name = name
    end;
    function say_hello();
        return this.greeting + ", " + this.name
    end;
end;
g = new Greeter("World")
console.log(g.say_hello())
g.greeting = "Hi"
console.log(g.say_hello())

