# --- 2. Operators ---
console.log("\n--- Testing Operators ---")
# Arithmetic
console.log("5 + 3 =", 5 + 3)
console.log("5 - 3 =", 5 - 3)
console.log("5 * 3 =", 5 * 3)
console.log("5 / 2 =", 5 / 2)
console.log("5 % 3 =", 5 % 3)
# Comparison
console.log("5 == 5 is", 5 == 5)
console.log("5 != 3 is", 5 != 3)
console.log("5 < 3 is", 5 < 3)
console.log("5 > 3 is", 5 > 3)
# Logical
console.log("true and false is", true and false)
console.log("true or false is", true or false)
console.log("not true is", not true)
# Shorthand Assignment
x = 10
x += 5
console.log("x += 5 is", x)
x -= 2
console.log("x -= 2 is", x)
x *= 3
console.log("x *= 3 is", x)
x /= 13
console.log("x /= 13 is", x)

# --- 3. Control Flow ---
console.log("\n--- Testing Control Flow ---")
# If/Elseif/Else
if (x > 10);
    console.log("x is > 10")
elseif (x < 10);
    console.log("x is < 10")
else;
    console.log("x is 10")
end;
# While loop
i = 0
while (i < 3);
    console.log("while loop i =", i)
    i += 1
end;
# For loop
for (j, 3);
    console.log("for loop j =", j)
end;
# Break/Continue
for (k, 10);
    if (k == 1); continue; end;
    if (k == 4); break; end;
    console.log("break/continue k =", k)
end;

